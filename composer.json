{
    "name": "brainbits/period",
    "description": "Period handling",
    "keywords": ["period", "date"],
    "homepage": "http://brainbits.net",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephan Wentz",
            "email": "swentz@brainbits.net"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-date": "*",
        "thecodingmachine/safe": "^2.1",
        "lcobucci/clock": "^2.3|^3.0",
        "psr/clock": "^1.0"
    },
    "require-dev": {
        "brainbits/phpcs-standard": "^5.0",
        "ergebnis/phpstan-rules": "^1.0",
        "jangregor/phpstan-prophecy": "^1.0",
        "phpstan/phpstan": "^1.9.0",
        "phpunit/phpunit": "^9.3",
        "symfony/serializer": "^5.3",
        "thecodingmachine/phpstan-safe-rule": "^1.2",
        "thecodingmachine/phpstan-strict-rules": "^1.0",
        "twig/twig": "^3.0",
        "roave/backward-compatibility-check": "^8.2"
    },
    "suggest": {
        "symfony/serializer": "If you need to serialize periods"
    },
    "autoload": {
        "psr-4": { "Brainbits\\Period\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Brainbits\\PeriodTest\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
