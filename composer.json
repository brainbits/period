{
    "name": "brainbits/period",
    "description": "Period handling",
    "keywords": ["period", "date"],
    "homepage": "http://brainbits.net",
    "license": "MIT",
    "authors": [
        {
            "name": "Stephan Wentz",
            "email": "swentz@brainbits.net"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-date": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "brainbits/phpcs-standard": "^1.0@dev"
    },
    "autoload": {
        "psr-4": { "Brainbits\\Period\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Brainbits\\PeriodTest\\": "tests/" }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
